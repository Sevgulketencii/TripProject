@model List<Feature>


@foreach (var item in Model)
{
    <div class="maghny-gd-1 col-lg-6">
        <div class="maghny-grid">
            <figure class="effect-lily border-radius  m-0">
                <img class="img-fluid" src=@item.Post1Image alt="" />
                <figcaption>
                    <div>
                        <h4>@item.Post1Name</h4>
                        <p>@item.Post1Description</p>
                    </div>

                </figcaption>
            </figure>
        </div>
    </div>
}
