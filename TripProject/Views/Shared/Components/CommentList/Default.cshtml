@model List<Comment>

<div class="comments mt-5">
    <h4 class="side-title ">Comments (2)</h4>
    <div class="media mt-4">
        @foreach (var item in Model)
        {
            <div class="img-circle">
                <img src="~/Traversal-Starter/assets/images/c1.jpg" class="img-fluid" alt="...">
            </div>
            <div class="media-body">

                <ul class="time-rply mb-2">
                    <li>
                        <a href="#URL" class="name mt-0 mb-2 d-block">@item.Name</a>
                        @item.CommentDate.ToShortDateString()

                    </li>
                    <li class="reply-last">
                        <a href="#reply" class="reply">
                            Reply
                        </a>
                        
                    </li>
                </ul>
                <p>
                    @item.CommentString
                </p>
            </div>
        }

    </div>

    
</div>