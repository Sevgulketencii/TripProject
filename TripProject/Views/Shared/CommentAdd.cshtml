

<div class="leave-comment-form mt-5" id="reply">
    <h4 class="side-title mb-2">Bir yorum bırak</h4>
    <p class="mb-4">
        Fikirlerin bizim için önemli
    </p>
    <form asp-action="CommentAdd" asp-controller="Comment" method="post">

        <div class="form-group">
            <textarea name="CommentString" class="form-control" placeholder="Yorum" required=""
                      spellcheck="false"></textarea>
        </div>
        <div class="input-grids row">

            <div class="form-group col-lg-6">
                <input type="text" name="Name" class="form-control" placeholder="Ad*"
                       required="">
            </div>
            <div class="form-group col-lg-6">
                <input type="text" name="DestinationID" class="form-control" placeholder="Hangi destination*" required="">
            </div>
        </div>

        <div class="submit text-right">
            <button class="btn btn-style btn-primary">Yorum'u yap</button>
        </div>
    </form>
</div>
