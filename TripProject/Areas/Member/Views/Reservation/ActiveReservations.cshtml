
@{
    ViewData["Title"] = "ActiveReservations";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

@model List<Reservation>

<div class="row">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header pb-0">
                <h6>Aktif Rezervasyonlarım</h6>
            </div>
            <div class="card-body px-0 pt-0 pb-2">
                <div class="table-responsive p-0">
                    <table class="table align-items-center mb-0">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Rezervasyon ID</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Şehir</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Açıklama</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Kişi Sayısı</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Statü</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ReservationID</td>
                                    <td>@item.Destination.City</td>
                                    <td>@item.Description</td>
                                    <td>@item.ReservationCount</td>

                                    <td class="align-middle text-sm-right text-sm">
                                        <span class="badge badge-sm bg-gradient-success">@item.ReservationStatus</span> @*PASİF SUCCES YERİNE SECONDARY*@
                                    </td>

                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



