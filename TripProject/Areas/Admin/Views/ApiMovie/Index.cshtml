
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model List<MovieApiModel>

<h5 class="pb-1 mb-4" style="margin-top:15px">IMBD TOP 100 MOVIE</h5>
<div class="row mb-5">
    @foreach (var item in Model)
    {
        <div class="col-md-6 col-xl-4">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">@item.title</h5>
                    <p class="card-text">
                        @item.description
                    </p>
                    <p class="card-text">
                        <small class="text-muted">@item.rank - @item.year</small>
                    </p>
                </div>
                <img class="card-img-bottom" src="@item.image" alt="Card image cap" />
            </div>
        </div>
    }

</div>
    
