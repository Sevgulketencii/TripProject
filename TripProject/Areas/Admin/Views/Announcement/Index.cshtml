@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model List<AnnouncementListDTO>

<table class="table table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Başlık</th>
            <th>İçerik</th>
            <th>Detaylar</th>
            <th>Güncelle</th>
            <th>Sil</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.AnnouncementID</td>
                <td>@item.Title</td>
                <td>@item.Content</td>
                <td><a href="" class="btn btn-success">Detaylar</a></td>
                <td><a href="/Admin/Announcement/UpdateAnnouncement/@item.AnnouncementID" class="btn btn-warning">Güncelle</a></td>
                <td><a href="/Admin/Announcement/DeleteAnnouncement/@item.AnnouncementID" class="btn btn-danger">Sil</a></td>
            </tr>
        }
    </tbody>
</table>
<br />
<a href="/Admin/Announcement/AddAnnouncement" class=" btn btn-success">Yeni Duyuru Ekle</a>