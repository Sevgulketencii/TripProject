@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model List<AnnouncementListDTOs>

<table class="table table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Başlık</th>
            <th>İçerik</th>
            <th>Detaylar</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.AnnouncementID</td>
                <td>@item.Title</td>
                <td>@item.Content</td>
                <td><a href="" class="btn btn-success">Detaylar</a></td>
            </tr>
        }
    </tbody>
</table>