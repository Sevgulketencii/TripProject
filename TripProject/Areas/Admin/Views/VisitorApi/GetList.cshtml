
@{
    ViewData["Title"] = "GetList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model List<VisitorModel>

<h1 style="margin-top:15px">Ziyaretçi Listesi</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Ziyaretçi ID</th>
            <th>Adı</th>
            <th>Soyadı</th>
            <th>Şehir</th>
            <th>Ülke</th>
            <th>E-Mail</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.VisitorID</td>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.City</td>
                <td>@item.Country</td>
                <td>@item.Email</td>
                <td><a href="/Admin/VisitorApi/UpdateVisitor/@item.VisitorID" class="btn btn-warning">Güncelle</a></td>
                <td><a href="/Admin/VisitorApi/DeleteVisitor/@item.VisitorID" class="btn btn-danger">Sil</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Admin/VisitorApi/AddVisitor" class="btn btn-success">Ekle</a>