
@{
    ViewData["Title"] = "UpdateVisitor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model VisitorModel
<h1 style="margin-top:15px">Ziyaretçi Düzenleme</h1>

<form action="/Admin/VisitorApi/UpdateVisitor" method="post">
    <input type="hidden" name="VisitorID" value="@Model.VisitorID" />
    <input type="text" name="Name" value="@Model.Name" class="form-control" /><br />
    <input type="text" name="Surname" value="@Model.Surname" class="form-control" /><br />
    <input type="text" name="City" value="@Model.City" class="form-control" /><br />
    <input type="text" name="Country" value="@Model.Country" class="form-control" /><br />
    <input type="text" name="Email" value="@Model.Email" class="form-control" /><br />
    <button action="submit" class="btn btn-success">Güncelle</button>
</form>
