
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sayac =0;
}
@model List<AppUser>
<h5 class="card-header">Rota Tablosu</h5>
<div class="table-responsive text-nowrap">
    <table class="table">
        <thead class="table-light">
            <tr>
                <th>#</th>
                <th>AD</th>
                <th>SOYAD</th>
                <th>E-MAIL</th>
                <th>Sil</th>
                <th>Düzenle</th>
                <th>Yorumlar</th>
                <th>Tur Geçmişi</th>

            </tr>
        </thead>
        <tbody class="table-border-bottom-0">
            @foreach (var item in Model)
            {
            <tr>
                @{sayac = sayac + 1;}
                <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@sayac</strong></td>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Email</td>
                <td><a href="/Admin/User/DeleteUser/@item.Id" class="btn btn-danger">Sil</a> </td>
                <td><a href="" class="btn btn-warning">Düzenle</a> </td>
                <td><a href="" class="btn btn-primary">Yorumlar</a> </td>
                <td><a href="/Admin/User/UserReservation/@item.Id" class="btn btn-secondary">Tur Geçmişi</a> </td>


            </tr>
            }


        </tbody>
    </table>
</div>

