
@{
    ViewData["Title"] = "UserReservation";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sayac = 0;
}
@model List<Reservation>
<h5 class="card-header">Kullanıcının Rezervasyonları</h5>
<div class="table-responsive text-nowrap">
    <table class="table">
        <thead class="table-light">
            <tr>
                <th>#</th>
                <th>Ad Soyad</th>
                <th>Rota</th>
                <th>Kişi Sayısı</th>
                <th>Tarih</th>
                <th>Detaylar</th>

            </tr>
        </thead>
        <tbody class="table-border-bottom-0">
            @foreach (var item in Model)
            {
                <tr>
                    @{sayac = sayac + 1;}
                    <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@sayac</strong></td>
                    <td>#</td>
                    <td>@item.Destination.City</td>
                    <td>@item.ReservationCount</td>
                    <td>@(((DateTime)item.ReservationDate).ToString("dd-MMM-yyyy"))</td>
                   
                    <td><a href="" class="btn btn-secondary">Tur Geçmişi</a> </td>


                </tr>
            }


        </tbody>
    </table>
</div>

