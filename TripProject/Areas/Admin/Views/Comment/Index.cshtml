
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model List<Comment>
<h5 class="card-header">Yorum Tablosu</h5>

<div class="table-responsive text-nowrap">
    <table class="table">
        <thead class="table-light">
            <tr>
                <th>Yorum ID</th>
                <th>Ad - Soyad</th>
                <th>Tarih</th>
                <th>Yorum</th>
                <th>Statü</th>
                <th>Rota</th>
                <th>Sil</th>

            </tr>
        </thead>
        <tbody class="table-border-bottom-0">
            @foreach (var item in Model)
            {
            <tr>
                <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.CommentID</strong></td>
                <td>@item.Name</td>
                <td>@(((DateTime)item.CommentDate).ToString("dd-MMM-yyyy"))</td>
                <td>@item.CommentString</td>
                @if (item.CommentStatus == true)
                {
                    <td><span class="badge bg-label-success me-1">Aktif</span></td>
                }
                else
                {
                    <td><span class="badge bg-label-warning me-1">Pasif</span></td>
                }
                <td>@item.Destination.City</td>
                <td><a href="/Admin/Comment/Delete/@item.CommentID" class="btn btn-danger">Sil</a> </td>


            </tr>
            }


        </tbody>
    </table>
</div>
